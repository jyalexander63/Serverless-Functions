---
pagination:
  data: collections.strapiDreamCars
  size: 1
  alias: car
permalink: "/cars/{{ car.id }}/index.html"
layout: layouts/default.hbs
---
<div class="container">
  <article class="car-detail">
    <h1>{{car.year}} {{car.make}} {{car.model}}</h1>
    
    <div class="meta text-muted mb-4">
      {{#if car.price}}
        <span class="badge bg-primary me-2">{{car.price}}</span>
      {{/if}}
      <span class="text-muted">Car {{car.pageNumber}} of {{car.totalPages}}</span>
    </div>

    {{#if car.image}}
      <div class="mb-4">
        <img src="{{car.image}}" class="img-fluid" alt="{{car.make}} {{car.model}}">
      </div>
    {{/if}}

    <div class="content">
      <p>{{car.description}}</p>
    </div>

    <nav class="car-navigation border-top border-bottom my-5 py-4">
      <div class="row justify-content-between align-items-center">
        <div class="col-md-5">
          {{#if pagination.previousPageHref}}
            <a href="{{pagination.previousPageHref}}" class="text-decoration-none">
              <div class="d-flex flex-column">
                <small class="text-muted mb-1">← Previous Car</small>
                {{#with collections.strapiDreamCars.[pagination.previousPageIndex]}}
                  <span class="fw-medium text-primary">{{year}} {{make}} {{model}}</span>
                {{/with}}
              </div>
            </a>
          {{/if}}
        </div>
        <div class="col-md-5 text-md-end mt-3 mt-md-0">
          {{#if pagination.nextPageHref}}
            <a href="{{pagination.nextPageHref}}" class="text-decoration-none">
              <div class="d-flex flex-column align-items-md-end">
                <small class="text-muted mb-1">Next Car →</small>
                {{#with collections.strapiDreamCars.[pagination.nextPageIndex]}}
                  <span class="fw-medium text-primary">{{year}} {{make}} {{model}}</span>
                {{/with}}
              </div>
            </a>
          {{/if}}
        </div>
      </div>
    </nav>

    <div class="mt-4">
      <a href="/cars" class="btn btn-secondary">← Back to Cars</a>
    </div>
  </article>
</div>